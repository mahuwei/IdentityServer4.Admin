{
    "Serilog": {
      "MinimumLevel": {
        "Default": "Debug",
        "Override": {
          "Skoruba": "Information"
        }
      },
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "File",
                "Args": {
                    "path": "Log\\skoruba_admin.txt",
                    "rollingInterval": "Day"
                }
            },
            {
                "Name": "MSSqlServer",
                "Args": {
                    "connectionString": "Data Source=192.168.1.200;Initial Catalog=IdentityServer4Admin2;Integrated Security=False;User ID=sa;Password=estep;Connect Timeout=60;MultipleActiveResultSets=true;",
                    "tableName": "Log",
                    "columnOptionsSection": {
                        "addStandardColumns": [ "LogEvent" ],
                        "removeStandardColumns": [ "Properties" ]
                    }
                }
            }
        ]
    }
}